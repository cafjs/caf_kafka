{
    "name": "top",
    "env" : {
        "appProtocol" : "http",
        "appPublisher" :"root",
        "appLocalName" : "kafka",
        "appSuffix" : "vcap.me:3000"
    },
    "components": [
        {
            "name": "log",
            "env" : {
                  "logLevel" : "DEBUG"

            }

        },
        {
            "name": "security",
            "module": null
        },
        {
            "name": "cp2"
        },
        {
            "name": "kafka",
            "module": "../../index.js#plug",
            "description": "Kafka gateway service.",
            "env" : {
                "kafkaBootstrapServers": "process.env.KAFKA_BOOTSTRAP_SERVERS||null",
                "kafkaAPIKey": "process.env.KAFKA_API_KEY||null",
                "kafkaAPISecret": "process.env.KAFKA_API_SECRET||null"
            }
        }
    ]
}
